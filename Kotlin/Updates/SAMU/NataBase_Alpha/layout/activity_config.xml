<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/caramel_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Título Principal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configurações"
                android:textSize="28sp"
                android:textColor="@color/deep_brown"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:padding="8dp"/>

            <!-- Seção: Conta Google -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_brown"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conta Google"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/textViewEmailConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Não autenticado"
                    android:textSize="16sp"
                    android:textColor="@color/light_caramel"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnTrocarConta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trocar Conta"
                    android:background="@drawable/button_back"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_gravity="start"/>
            </LinearLayout>

            <!-- Seção: Configurações de Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_brown"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurações de Email"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Envio automático de relatórios"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                    <Switch
                        android:id="@+id/switchEmailAuto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Envia automaticamente o relatório por email ao confirmar perdas/sobras"
                    android:textSize="14sp"
                    android:textColor="@color/light_caramel"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Seção: Diretório de Exportação -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_brown"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diretório de Exportação"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/textViewDiretorioAtual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diretório padrão"
                    android:textSize="16sp"
                    android:textColor="@color/light_caramel"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnAlterarDiretorio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alterar Diretório"
                    android:background="@drawable/button_back"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_gravity="start"/>
            </LinearLayout>

            <!-- Seção: Backup Manual -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_brown"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp">

                <Button
                    android:id="@+id/btnBackupManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:text="Criar Backup Seguro"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cria um backup criptografado dos seus dados que pode ser restaurado posteriormente"
                    android:textColor="@color/light_caramel"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <!-- Seção: Segurança -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_brown"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Segurança"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Switch
                        android:id="@+id/switchBiometric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Autenticação Biométrica para Ações Críticas"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Requer autenticação biométrica para: limpar dados, regenerar Excel, enviar emails"
                    android:textSize="14sp"
                    android:textColor="@color/light_caramel"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Seção: Limpeza de Dados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_brown"
                android:padding="20dp"
                android:layout_marginBottom="32dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limpeza de Dados"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnLimparCache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limpar Cache Local"
                    android:background="@drawable/button_back"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove todos os dados temporários da aplicação"
                    android:textSize="14sp"
                    android:textColor="@color/light_caramel"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Botão Voltar -->
            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:background="@drawable/button_back"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>