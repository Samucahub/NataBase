<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/deep_brown"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inclusive_sans"
            android:gravity="center"
            android:text="@string/natabase"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/natabase"
            android:src="@drawable/logo_placeholder" />
    </LinearLayout>

    <!-- Main Content Area (Horizontal Split) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left Side Image -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Bakery Background Left"
            android:scaleType="centerCrop"
            android:src="@drawable/padariabackground_login"
            android:adjustViewBounds="true" />

        <!-- Center Login Panel -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/caramel_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- Login Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="@string/login_title"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <!-- Username Input -->
            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/input_underline"
                android:fontFamily="@font/inclusive_sans"
                android:hint="@string/username_hint"
                android:inputType="textPersonName"
                android:minHeight="60dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/dark_brown_text"
                android:textColorHint="@color/dark_brown_text"
                android:textSize="40sp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/input_underline"
                android:fontFamily="@font/inclusive_sans"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:minHeight="60dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/dark_brown_text"
                android:textColorHint="@color/dark_brown_text"
                android:textSize="40sp" />

            <!-- Login Button -->
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_login"
                android:fontFamily="@font/inclusive_sans"
                android:text="@string/login_button"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- OR Divider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/inclusive_sans"
                android:text="@string/or_divider"
                android:textColor="@color/deep_brown"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Google OAuth Login Button (Placeholder) -->
            <Button
                android:id="@+id/buttonGoogleLogin"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/button_google"
                android:drawableStart="@drawable/ic_google"
                android:drawablePadding="12dp"
                android:fontFamily="@font/inclusive_sans"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/google_login_button"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Right Side Image -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Bakery Background Right"
            android:scaleType="centerCrop"
            android:src="@drawable/padariabackground_login"
            android:adjustViewBounds="true" />
    </LinearLayout>

</LinearLayout>
