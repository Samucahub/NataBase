<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/deep_brown"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inclusive_sans"
            android:gravity="center"
            android:text="@string/natabase"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/natabase"
            android:src="@drawable/logo_placeholder" />
    </LinearLayout>

    <!-- Scrollable Content Area for Portrait -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Bakery Background"
                android:scaleType="centerCrop"
                android:src="@drawable/padariabackground_login"
                android:alpha="0.25"
                android:minHeight="600dp" />

            <!-- Center Login Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/caramel_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:elevation="8dp">

                    <!-- Login Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        android:fontFamily="@font/inclusive_sans"
                        android:text="@string/login_title"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <!-- Username Input -->
                    <EditText
                        android:id="@+id/editTextUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/input_underline"
                        android:fontFamily="@font/inclusive_sans"
                        android:hint="@string/username_hint"
                        android:inputType="textPersonName"
                        android:minHeight="56dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/dark_brown_text"
                        android:textColorHint="@color/dark_brown_text"
                        android:textSize="18sp" />

                    <!-- Password Input -->
                    <EditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/input_underline"
                        android:fontFamily="@font/inclusive_sans"
                        android:hint="@string/password_hint"
                        android:inputType="textPassword"
                        android:minHeight="56dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/dark_brown_text"
                        android:textColorHint="@color/dark_brown_text"
                        android:textSize="18sp" />

                    <!-- Login Button -->
                    <Button
                        android:id="@+id/buttonLogin"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/button_login"
                        android:fontFamily="@font/inclusive_sans"
                        android:text="@string/login_button"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- OR Divider -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/inclusive_sans"
                        android:text="@string/or_divider"
                        android:textColor="@color/deep_brown"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Google OAuth Login Button (Placeholder) -->
                    <Button
                        android:id="@+id/buttonGoogleLogin"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_google"
                        android:drawableStart="@drawable/ic_google"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/inclusive_sans"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/google_login_button"
                        android:textColor="@color/dark_brown_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>
